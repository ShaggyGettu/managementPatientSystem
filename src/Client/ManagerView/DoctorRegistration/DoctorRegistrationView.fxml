<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Client.ManagerView.DoctorRegistration.DoctorRegistrationController">
   <Label layoutX="114.0" layoutY="14.0" prefHeight="38.0" prefWidth="410.0" text="Doctor Register Hospital management"
          textFill="#ff0000">
      <font>
         <Font size="24.0"/>
      </font>
   </Label>
   <AnchorPane layoutY="115.0" prefHeight="220.0" prefWidth="140.0">
      <Label fx:id="idLabel" layoutX="20.0" maxWidth="120.0" prefHeight="28.0" prefWidth="120.0" text="Id">
         <font>
            <Font size="18.0"/>
         </font>
      </Label>
      <Label fx:id="emailLabel" layoutX="20.0" layoutY="45.0" maxWidth="120.0" prefHeight="28.0" prefWidth="120.0"
             text="Email">
         <font>
            <Font size="18.0"/>
         </font>
      </Label>
      <Label fx:id="passwordLabel" layoutX="20.0" layoutY="90.0" maxWidth="120.0" prefHeight="28.0" prefWidth="120.0"
             text="Password">
         <font>
            <Font size="18.0"/>
         </font>
      </Label>
      <Label fx:id="nameLabel" layoutX="20.0" layoutY="135.0" maxWidth="120.0" prefHeight="28.0" prefWidth="120.0"
             text="Name">
         <font>
            <Font size="18.0"/>
         </font>
      </Label>
   </AnchorPane>
   <AnchorPane layoutX="150.0" layoutY="115.0" prefHeight="180.0" prefWidth="180.0">
      <TextField fx:id="idTextField" prefHeight="28.0" prefWidth="170.0" promptText="id"/>
      <TextField fx:id="emailTextField" layoutY="45.0" prefHeight="28.0" prefWidth="170.0" promptText="email"/>
      <PasswordField fx:id="passwordTextField" layoutY="90.0" prefHeight="28.0" prefWidth="170.0"
                     promptText="password"/>
      <TextField fx:id="nameTextField" layoutY="135.0" prefHeight="28.0" prefWidth="170.0" promptText="name"/>
   </AnchorPane>
   <AnchorPane layoutX="330.0" layoutY="115.0" prefHeight="180.0" prefWidth="270.0">
      <Label fx:id="idErrorLabel" prefHeight="28.0" prefWidth="270.0" text="Please enter valid id." textFill="RED"
             visible="false">
         <font>
            <Font size="16.0"/>
         </font>
      </Label>
      <Label fx:id="emailErrorLabel" layoutY="45.0" prefHeight="28.0" prefWidth="270.0"
             text="Please enter valid email address." textFill="RED" visible="false">
         <font>
            <Font size="16.0"/>
         </font>
      </Label>
      <Label fx:id="passwordErrorLabel" layoutY="90.0" prefHeight="28.0" prefWidth="270.0"
             text="Please enter valid password." textFill="RED" visible="false">
         <font>
            <Font size="16.0"/>
         </font>
      </Label>
      <Label fx:id="nameErrorLabel" layoutY="135.0" prefHeight="28.0" prefWidth="270.0"
             text="Please enter valid name." textFill="RED" visible="false">
         <font>
            <Font size="16.0"/>
         </font>
      </Label>
   </AnchorPane>
   <AnchorPane layoutY="335.0" prefHeight="65.0" prefWidth="600.0">
      <Button fx:id="addButton" layoutX="480.0" layoutY="15.0" mnemonicParsing="false" prefWidth="100.0"
              text="Add Doctor">
         <font>
            <Font size="14.0"/>
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="20.0" layoutY="15.0" mnemonicParsing="false" prefWidth="80.0" text="Exit">
         <font>
            <Font size="14.0"/>
         </font>
      </Button>
   </AnchorPane>
</AnchorPane>
