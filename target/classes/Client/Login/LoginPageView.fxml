<AnchorPane fx:id="mainPane" prefHeight="330.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Login.LoginController">
    <children>
        <Label layoutX="16.0" layoutY="14.0" prefHeight="35.0" prefWidth="318.0" text="Login Hospital Management" textFill="RED">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label fx:id="usernameLabel" layoutX="30.0" layoutY="85.0" prefHeight="20.0" prefWidth="100.0" text="Email">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label fx:id="passwordLabel" layoutX="30.0" layoutY="140.0" prefHeight="20.0" prefWidth="100.0" text="Password">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="emailTextField" layoutX="140.0" layoutY="85.0" promptText="email" />
      <Label fx:id="errorEmailLabel" layoutX="128.0" layoutY="115.0" prefHeight="18.0" prefWidth="174.0" text="Please enter valid email address." textFill="RED" visible="false" />
        <PasswordField fx:id="passwordTextField" layoutX="140.0" layoutY="140.0" promptText="password" />
