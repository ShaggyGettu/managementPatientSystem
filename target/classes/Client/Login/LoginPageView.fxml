      <Label fx:id="errorDetailsLabel" layoutX="31.0" layoutY="225.0" prefHeight="20.0" prefWidth="288.0" text="Wrong email/password. Please re-enter it." textFill="RED" visible="false">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
        <Button fx:id="loginButton" layoutX="119.0" layoutY="270.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="112.0" text="Login" />
    </children>
</AnchorPane>
